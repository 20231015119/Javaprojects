class Circulo:
    pi= 3.14

    def __init__(self,diametro):
        self.radio= diametro/2

    def area (self):
        return self.pi * self.radio **2

    def perimetro (self):
        return self.pi *  2* self.radio

mediaCirculo= Lote(20)
print("El area del Circulo es:",mediaCirculo.area())
print("El perimetro del Circulo es:",mediaCirculo.perimetro())
