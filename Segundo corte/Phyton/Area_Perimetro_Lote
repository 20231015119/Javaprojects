class Lote:
    pi= 3.14

    def _init_(self,diameter):
        self.radius= diameter/2

    def area (self):
        return self.pi * self.radius **2

    def perimeter (self):
        return self.pi *  2* self.radius

medium_Lote= Lote(20)
print("El area del lote es:",medium_Lote.area())
print("El perimetro del lote es:",medium_Lote.perimeter())
