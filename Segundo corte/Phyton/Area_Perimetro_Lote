class Lote:
    pi= 3.14

    def __init__(self,diametro):
        self.radio= diametro/2

    def area (self):
        return self.pi * self.radio **2

    def perimetro (self):
        return self.pi *  2* self.radio

mediaLote= Lote(20)
print("El area del lote es:",mediaLote.area())
print("El perimetro del lote es:",mediaLote.perimetro())
